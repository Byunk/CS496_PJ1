<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tv_habit_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="도담이 쓰다듬기"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/enddate_textview"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:text="2022년 6월 18일"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startdate_textview"
        app:layout_constraintTop_toBottomOf="@+id/tv_habit_item" />

    <TextView
        android:id="@+id/startdate_textview"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="2022년 7월 11일"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_habit_item" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/todoSlider"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        app:area_margin="0dp"
        app:complete_icon="@drawable/check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:slider_height="40dp"
        app:slider_locked="false"
        app:text="      완료!"
        app:text_size="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>